@import "syntax";
@import "nib";

/* Global Reset */

@font-face {font-family: 'BrandonGrotesque-Thin';src: url('/fonts/Brandon_thin.otf');}


* {
  margin: 0;
  padding: 0;
}

html, body { height: 100%; }

html {
  font-size: 14px;
}


*, *:before, *:after {
  box-sizing: border-box;
}




/**
 * The nice header
 */

h1 {
  font-family: "BrandonGrotesque-Thin", Arial, sans-serif;
  font-size: 4.2em;
  font-weight: 100;
  letter-spacing: 0.3em;
}



header {
  background: black no-repeat center;
  /*
  background-image: url("/images/river_cover.jpg");
  background-image: url("/images/rock_cover.jpg");
  background-image: url("/images/sky_cover.jpg");
  background-image: url("/images/lamp_cover.jpg");
  */

  background-size: cover;
  position: relative;
  perspective: 600;
  perspective-origin: 50%;
}

header:before {
  content: " ";
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: black;
  opacity: 1;
  transition: opacity 0.6s linear;
}
header.image-loaded:before {
  opacity: 0;
}

header h1 {
  opacity: 0;
  display: block;
  color: white;
  text-shadow: 0 2px 0 rgba(0, 0, 0, 0.6);
  text-align: center;
  font-size: 80px;
  line-height: 2;
  height: 80px;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  letter-spacing: 0.9em;

  padding-left: 0.9em; /* To account for letter spacing */

  transition: letter-spacing 2s ease-out, transform 1s ease-out, opacity 0.2s linear;
  
  transform-style: preserve-3d;
  transform: rotatex(40deg);
}
header h1 br {
  display: none;
}

header h1.relaxed {
  opacity: 1;
  letter-spacing: 1em;
  transform: rotatex(0deg);
}

@media (max-width: 1450px) {
  header h1 {
    font-size: 60px;
  }
}

@media (max-width: 1024px) {
  header h1 {
    font-size: 40px;
  }
}

@media (max-width: 768px) {
  header h1 {
    font-size: 30px;
    height: 120px;
  }
  header h1 br {
    display: block;
  }
}



#main { display: none; }